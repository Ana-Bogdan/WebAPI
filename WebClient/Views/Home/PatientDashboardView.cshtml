@page
@model WebClient.Models.PatientViewModel
@{
    ViewData["Title"] = "Patient Dashboard";
}

<h2>Patient Dashboard</h2>

<form method="post">
    <div>
        <label>Name:</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Email:</label>
        <input asp-for="Email" />
    </div>
    <div>
        <label>Phone Number:</label>
        <input asp-for="PhoneNumber" />
    </div>
    <div>
        <label>Emergency Contact:</label>
        <input asp-for="EmergencyContact" />
    </div>
    <div>
        <label>Weight:</label>
        <input asp-for="Weight" type="number" />
    </div>
    <div>
        <label>Height:</label>
        <input asp-for="Height" type="number" />
    </div>
    <div>
        <label>Blood Type:</label>
        <input asp-for="BloodType" />
    </div>
    <div>
        <label>Allergies:</label>
        <input asp-for="Allergies" />
    </div>
    <div>
        <label>Password:</label>
        <input asp-for="Password" type="password" />
    </div>
    
    <button type="submit">Update</button>
    <a asp-page="/Logout">Logout</a>
</form>
