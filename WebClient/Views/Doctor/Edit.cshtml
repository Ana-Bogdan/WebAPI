@{
    ViewData["Title"] = "Edit Doctor Profile";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Doctor Profile</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        .edit-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }

        .form-card {
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            overflow: hidden;
        }

            .form-card .card-header {
                background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
                color: white;
                border: none;
                font-weight: 600;
                padding: 1.5rem;
            }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .form-control, .form-select {
            border-radius: 10px;
            border: 2px solid #e9ecef;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            }

        .btn-save {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 0.75rem 2rem;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-save:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
                color: white;
            }

        .btn-cancel {
            background: transparent;
            border: 2px solid #6c757d;
            color: #6c757d;
            padding: 0.75rem 2rem;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-cancel:hover {
                background: #6c757d;
                color: white;
            }

        .preview-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #667eea;
            margin-bottom: 1rem;
        }

        .alert-custom {
            border: none;
            border-radius: 10px;
            margin-bottom: 1rem;
        }

        .input-group-text {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 10px 0 0 10px;
        }

        .validation-summary {
            background: #f8d7da;
            border: 1px solid #f5c6cb;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Header -->
        <div class="edit-header text-center">
            <div class="container">
                <h1 class="display-5 mb-2">
                    <i class="fas fa-user-edit me-3"></i>Edit Doctor Profile
                </h1>
                <p class="lead">Update your professional information</p>
            </div>
        </div>

        <div class="container">
            <!-- Alert Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-custom">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-custom">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                </div>
            }

            <!-- Validation Summary -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-summary">
                    <h6><i class="fas fa-exclamation-triangle me-2"></i>Please correct the following errors:</h6>
                    <ul class="mb-0">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form method="post" asp-action="Edit" asp-antiforgery="true">
                <input type="hidden" name="DoctorId" value="@Model.DoctorId" />
                <input type="hidden" name="Rating" value="@Model.Rating" />

                <div class="row">
                    <!-- Basic Information -->
                    <div class="col-md-6">
                        <div class="card form-card">
                            <div class="card-header">
                                <i class="fas fa-user me-2"></i>Basic Information
                            </div>
                            <div class="card-body p-4">
                                <div class="form-group">
                                    <label class="form-label" for="DoctorName">
                                        <i class="fas fa-user me-2"></i>Doctor Name
                                    </label>
                                    <input type="text" class="form-control" id="DoctorName" name="DoctorName"
                                           value="@Model.DoctorName" required />
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="DepartmentId">
                                        <i class="fas fa-hospital me-2"></i>Department
                                    </label>
                                    <select class="form-select" id="DepartmentId" name="DepartmentId" required>
                                        @foreach (var dept in ViewBag.Departments as SelectList)
                                        {
                                            <option value="@dept.Value" selected="@dept.Selected">@dept.Text</option>
                                        }
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="CareerInfo">
                                        <i class="fas fa-briefcase me-2"></i>Career Information
                                    </label>
                                    <textarea class="form-control" id="CareerInfo" name="CareerInfo"
                                              rows="3" placeholder="Enter career details...">@Model.CareerInfo</textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Information -->
                    <div class="col-md-6">
                        <div class="card form-card">
                            <div class="card-header">
                                <i class="fas fa-address-card me-2"></i>Contact Information
                            </div>
                            <div class="card-body p-4">
                                <div class="form-group">
                                    <label class="form-label" for="Mail">
                                        <i class="fas fa-envelope me-2"></i>Email Address
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-at"></i>
                                        </span>
                                        <input type="email" class="form-control" id="Mail" name="Mail"
                                               value="@Model.Mail" required />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="PhoneNumber">
                                        <i class="fas fa-phone me-2"></i>Phone Number
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-phone"></i>
                                        </span>
                                        <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber"
                                               value="@Model.PhoneNumber" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="AvatarUrl">
                                        <i class="fas fa-image me-2"></i>Avatar URL
                                    </label>
                                    <input type="url" class="form-control" id="AvatarUrl" name="AvatarUrl"
                                           value="@Model.AvatarUrl" placeholder="https://example.com/avatar.jpg" />
                                    <div class="text-center mt-3">
                                        <img id="avatarPreview"
                                             src="@(string.IsNullOrEmpty(Model.AvatarUrl) ? "/images/default-avatar.png" : Model.AvatarUrl)"
                                             alt="Avatar Preview" class="preview-avatar" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="row mt-4">
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-save me-3">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                        <a href="/Doctor/Profile/@Model.DoctorId" class="btn btn-cancel">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Avatar preview functionality
        document.getElementById('AvatarUrl').addEventListener('input', function() {
            const url = this.value;
            const preview = document.getElementById('avatarPreview');

            if (url && isValidUrl(url)) {
                preview.src = url;
                preview.onerror = function() {
                    this.src = '/images/default-avatar.png';
                };
            } else {
                preview.src = '/images/default-avatar.png';
            }
        });

        function isValidUrl(string) {
            try {
                new URL(string);
                return true;
            } catch (_) {
                return false;
            }
        }

        // Form validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const requiredFields = ['DoctorName', 'DepartmentId', 'Mail'];
            let isValid = true;

            requiredFields.forEach(fieldName => {
                const field = document.querySelector(`[name="${fieldName}"]`);
                if (!field.value.trim()) {
                    field.classList.add('is-invalid');
                    isValid = false;
                } else {
                    field.classList.remove('is-invalid');
                }
            });

            if (!isValid) {
                e.preventDefault();
                alert('Please fill in all required fields.');
            }
        });
    </script>
</body>
</html>