<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinUI.View.DoctorDashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUI.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Doctor Profile Dashboard" 
                       Style="{StaticResource TitleTextBlockStyle}" 
                       FontWeight="Bold" 
                       FontSize="28" />
                <TextBlock Text="Manage your professional information" 
                       Style="{StaticResource SubtitleTextBlockStyle}" 
                       Opacity="0.6" 
                       Margin="0,5,0,0" />
            </StackPanel>

            <!-- Main Content with Loading Indicator -->
            <Grid Grid.Row="1">
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                          Width="50" 
                          Height="50" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center" />

                <ScrollViewer Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Left Column - Profile Image -->
                        <StackPanel Grid.Column="0" Margin="0,0,40,0" Width="220">
                            <PersonPicture ProfilePicture="{x:Bind ViewModel.AvatarUrl, Mode=OneWay}" 
                                       Width="200" 
                                       Height="200" />

                            <TextBox Header="Image URL" 
                                 Text="{x:Bind ViewModel.AvatarUrl, Mode=TwoWay}" 
                                 Margin="0,10,0,0"
                                 PlaceholderText="Enter image URL" />
                        </StackPanel>

                        <!-- Right Column - Doctor Information -->
                        <StackPanel Grid.Column="1" Spacing="15">
                            <!-- Name -->
                            <TextBox Header="Full Name" 
                                 Text="{x:Bind ViewModel.DoctorName, Mode=TwoWay}" 
                                 PlaceholderText="Enter your full name" />

                            <!-- Department -->
                            <ComboBox Header="Department" 
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="Name"
                                  SelectedValue="{x:Bind ViewModel.DepartmentId, Mode=TwoWay}"
                                  PlaceholderText="Select your department"
                                  Width="300"
                                  HorizontalAlignment="Left" />

                            <!-- Current Department -->
                            <TextBlock>
                            <Run Text="Current Department: " />
                            <Run Text="{x:Bind ViewModel.DepartmentName, Mode=OneWay}" FontWeight="SemiBold" />
                            </TextBlock>

                            <!-- Rating (Read-only) -->
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="Rating:" VerticalAlignment="Center" />
                                <RatingControl Value="{x:Bind ViewModel.Rating, Mode=OneWay}" 
                                          IsReadOnly="True" />
                                <TextBlock Text="{x:Bind ViewModel.Rating, Mode=OneWay}" 
                                       VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- Career Information -->
                            <TextBox Header="Career Information" 
                                 Text="{x:Bind ViewModel.CareerInfo, Mode=TwoWay}" 
                                 PlaceholderText="Enter your career information and specializations"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="100" />

                            <!-- Contact Information -->
                            <TextBox Header="Phone Number" 
                                 Text="{x:Bind ViewModel.PhoneNumber, Mode=TwoWay}" 
                                 PlaceholderText="Enter your phone number" />

                            <TextBox Header="Email" 
                                 Text="{x:Bind ViewModel.Mail, Mode=TwoWay}" 
                                 PlaceholderText="Enter your email address" />
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>

            <!-- Footer - Action Buttons -->
            <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0" 
                    Spacing="10">
                <Button Content="Revert Changes" 
                    Click="OnRevertChanges" />
                <Button Content="Save Profile" 
                    Click="OnSaveProfile"
                    Style="{StaticResource AccentButtonStyle}" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
