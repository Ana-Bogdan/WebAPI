<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="WinUI.View.SearchDoctorsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUI.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:WinUI.Model"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <TextBox 
            x:Name="SearchTextBox"
            Grid.Row="0"
            PlaceholderText="Search doctors by department..." 
            Margin="10"
            TextChanged="SearchTextBox_TextChanged"/>

        <!-- Doctors List -->
        <ListView 
            x:Name="DoctorsListView"
            Grid.Row="1"
            ItemsSource="{x:Bind ViewModel.Doctors, Mode=OneWay}"
            IsItemClickEnabled="True"
            ItemClick="DoctorsListView_ItemClick"
            Margin="10">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:DoctorModel">
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <PersonPicture 
                            ProfilePicture="{x:Bind AvatarUrl}" 
                            Width="50" 
                            Height="50"/>
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="{x:Bind DoctorName}" FontWeight="SemiBold"/>
                            <TextBlock Text="{x:Bind DepartmentName}" Opacity="0.7"/>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE1CF;" FontFamily="Segoe MDL2 Assets"/>
                                <TextBlock Text="{x:Bind Rating}" Margin="5,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Profile Overlay -->
        <Grid 
            x:Name="ProfileOverlay"
            Grid.RowSpan="2" 
            Visibility="{x:Bind ViewModel.IsProfileOpen, Mode=OneWay}"
            Background="#99000000"
            Tapped="ProfileOverlay_Tapped">

            <Grid 
                x:Name="ProfilePanel"
                Width="400" 
                MaxHeight="600"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Background="White"
                CornerRadius="8"
                Padding="20"
                Tapped="ProfilePanel_Tapped">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Profile Header -->
                <StackPanel Orientation="Horizontal" Grid.Row="0">
                    <PersonPicture 
                        x:Name="DoctorProfileImage"
                        Width="100" 
                        Height="100"/>
                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock 
                            x:Name="DoctorNameText" 
                            FontSize="20" 
                            FontWeight="SemiBold"/>
                        <TextBlock 
                            x:Name="DepartmentText" 
                            Opacity="0.7" 
                            FontSize="16"/>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE1CF;" FontFamily="Segoe MDL2 Assets"/>
                            <TextBlock 
                                x:Name="RatingText" 
                                Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Contact Info -->
                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    <TextBlock Text="Contact Information" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                        <FontIcon Glyph="&#xE715;" FontFamily="Segoe MDL2 Assets"/>
                        <TextBlock 
                            x:Name="EmailText" 
                            Margin="10,0,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                        <FontIcon Glyph="&#xE717;" FontFamily="Segoe MDL2 Assets"/>
                        <TextBlock 
                            x:Name="PhoneText" 
                            Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Career Info -->
                <ScrollViewer Grid.Row="2" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="Career Information" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock 
                            x:Name="CareerInfoText" 
                            TextWrapping="Wrap"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Close Button -->
                <Button 
                    x:Name="CloseProfileButton"
                    Content="&#xE711;" 
                    FontFamily="Segoe MDL2 Assets" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Background="Transparent" 
                    BorderThickness="0"
                    Click="CloseProfileButton_Click"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>