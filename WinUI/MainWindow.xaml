<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WinUI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top panel with button -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <Button x:Name="notificationButton" Click="notificationButton_Click">Notification Section</Button>
            <TextBlock x:Name="responseText" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Frame for page navigation -->
        <Frame x:Name="MainFrame" Grid.Row="1"/>
    </Grid>
</Window>
